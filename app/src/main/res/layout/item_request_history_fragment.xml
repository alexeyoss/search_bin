<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.example.searchbin.presentation.custom_views.BinDetailsView
        android:id="@+id/history_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:body="@tools:sample/date/hhmmss"
        tools:title="@tools:sample/us_zipcodes" />

    <ImageView
        android:id="@+id/info_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/medium_margin"
        android:contentDescription="@string/info_icon_desc"
        android:src="@drawable/ic_info"
        app:layout_constraintEnd_toEndOf="@id/history_item"
        app:layout_constraintTop_toTopOf="@id/history_item" />

</androidx.constraintlayout.widget.ConstraintLayout>